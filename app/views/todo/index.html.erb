


<h3>Todo</h3>
<ul>
  <ul><li>
  <%= form_with url: "/todo", scope: "todo" do |form| %>
  <span><%= form.text_field :content, id: :content %></span>
  <%= form.check_box :completed_status %>
  <%= label_tag(:completed_status, "Completed") %>
  <%= form.submit "create" %>
  <% end %>
  </li>
  </ul>
    <% @todo.each do |todo| %>
      <ul class="todos">
        <li ><%= link_to 'X', todo_path(todo), method: :delete %></li>
        <li><%= form_with model: todo, id: "edit_form", class: "custom_class_"+todo.id.to_s do |form| %>
            <%= form.text_field :content, id:  :todo_content, ondblclick: 'make_editable('+todo.id.to_s+')' %>
            <%= form.check_box :completed_status %>
            <%= form.submit "Update"%>
            <% end %></li>
      </ul>
    <% end %>

    <ul class="menu">
      <li><%= link_to 'All', todo_index_url %>
      <%= link_to 'Active', todo_index_url(:completed_status => "f") %>
      <%= link_to 'Completed', todo_index_url(:completed_status => "t") %></li>
    </ul>

</ul>



