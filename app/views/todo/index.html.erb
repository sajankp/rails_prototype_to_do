
<%= form_with Todo: Todo.new do |form| %>
<%#= form.label :New %>
<%= form.text_field :content, id: :content %>
<%= check_box_tag(:completed_status) %>
<%= label_tag(:completed_status, "Completed") %>
<%= form.submit "create" %>
<% end %>

<h3>Todo</h3>
<ul>
    <% @todo.each do |todo| %>
      <ul class="todos">
        <li ><%= check_box_tag :status, 1, todo.completed_status %></li>
        <li class="todo-content"><%= todo.content %></li>
        <li ><%= link_to 'X', todo_path(todo), method: :delete %></li>
        <li><%= form_with(model: todo ) do |form| %>
            <%= form.text_field :content, id: :todo_content %>
            <%= check_box_tag("status",'1',todo.completed_status) %>
            <%#= label_tag(:completed_status, "Completed") %>
            <%= form.submit "Update"%>
            <% end %></li>
      </ul>
    <% end %>

    <ul class="menu">
      <li><%= link_to 'All', todo_index_url %>
      <%= link_to 'Active', todo_index_url(:completed_status => "f") %>
      <%= link_to 'Completed', todo_index_url(:completed_status => "t") %></li>
    </ul>

</ul>



