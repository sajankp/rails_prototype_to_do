


<h1>todos</h1>
<ul>
  <li>
    <%= form_with url: "/todo", scope: "todo" do |form| %>
    <%= form.check_box :completed_status %>
    <%= form.text_field :content, id: :content %>
    <%= form.submit "create" %>
    <% end %><span>'    '</span>
  </li>

  <% @todo.reverse.each do |todo| %>

    <li class="todos">

      <%= form_with model: todo, id: "edit_form", class: "custom_class_"+todo.id.to_s do |form| %>
      <%= form.check_box :completed_status %>
      <%= form.text_field :content, id:  :todo_content, ondblclick: 'make_editable('+todo.id.to_s+')' %>
      <%= link_to 'Ã—', todo_path(todo), method: :delete %>
      <%= form.submit "Update"%>
      <% end %>
    </li>
  <% end %>
</ul>


<ul class="menu">
  <li><%= link_to 'All', todo_index_url %>
    <%= link_to 'Active', todo_index_url(:completed_status => "f") %>
    <%= link_to 'Completed', todo_index_url(:completed_status => "t") %></li>
</ul>
